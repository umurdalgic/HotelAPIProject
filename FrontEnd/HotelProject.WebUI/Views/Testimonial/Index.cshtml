@model List<TestimonialVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Referans Görseli</th>
            <th>Referans Adı</th>
            <th>Referans Ünvanı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TestimonialId</td>
                <td><img src="@item.Image" alt="Image not found." /></td>
                <td>@item.Name</td>
                <td>@item.Title</td>
                <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Testimonial/AddTestimonial/" class="btn btn-success">Yeni Referans Ekle</a>



